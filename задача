#include <stdio.h>

int main() {
    int t1, t2, t3;  // Змінні для зберігання трьох значень
    float max_time, result;  // Змінні для максимального часу та результату
    printf("Введіть три значення: ");
    scanf("%d %d %d", &t1, &t2, &t3);  // Зчитування трьох значень з консолі
    // Знаходження максимального значення серед t1, t2 і t3
    max_time = t1 > t2 ? (t1 > t3 ? t1 : t3) : (t2 > t3 ? t2 : t3);
    result = max_time / 3;  // Обчислення результату, поділивши максимум на 3
    printf("Час, необхідний для з'єднання пирога: %.2f годин\n", result);  // Виведення результату з двома знаками після коми
    return 0;
}
