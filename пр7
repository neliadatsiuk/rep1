#include <stdio.h>
#include <math.h>

int findCircleIntersection(int x1, int y1, int r1, int x2, int y2, int r2) {
    // Обчислюємо відстань між центрами кол
    double distance = sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));

    // Перевіряємо умови перетину кол
    if (distance > r1 + r2) {
        // Кола не перетинаються
        return 0;
    } else if (distance == r1 + r2) {
        // Одна точка перетину (кола торкаються зовні)
        return 1;
    } else if (distance < abs(r1 - r2)) {
        // Кола мають внутрішній перетин
        return 0;
    } else if (distance == abs(r1 - r2) && distance != 0) {
        // Одна точка перетину (кола торкаються всередині)
        return 1;
    } else {
        // Два точки перетину
        return 2;
    }
}

int main() {
    int x1, y1, r1, x2, y2, r2;
    printf("Введіть координати та радіус першого кола (x1, y1, r1): ");
    scanf("%d %d %d", &x1, &y1, &r1);
    printf("Введіть координати та радіус другого кола (x2, y2, r2): ");
    scanf("%d %d %d", &x2, &y2, &r2);

    int intersectionPoints = findCircleIntersection(x1, y1, r1, x2, y2, r2);
    printf("Кількість точок перетину: %d\n", intersectionPoints);

    return 0;
}
