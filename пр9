#include <stdio.h>
#include <stdlib.h>

int minSteps(int x, int y) {
    // Розраховуємо різницю між x та y
    int diff = y - x;

    // Якщо різниця менше або дорівнює 2, повертаємо різницю як результат
    if (diff <= 2) {
        return diff;
    }

    // Ініціалізуємо лічильник кроків
    int steps = 2;

    // Цикл для обчислення мінімальної кількості кроків
    while (diff > steps) {
        // Збільшуємо лічильник кроків
        steps++;

        // Перехід до наступного кроку
        if (steps % 2 == 0) {
            // Якщо крок парний, додаємо його до різниці
            diff -= steps;
        } else {
            // Якщо крок непарний, віднімаємо його від різниці
            diff -= steps;
        }
    }

    // Повертаємо результат
    return steps;
}

int main() {
    int x, y;
    printf("Введіть значення x: ");
    scanf("%d", &x);
    printf("Введіть значення y: ");
    scanf("%d", &y);

    // Виклик функції та виведення результату
    int result = minSteps(x, y);
    printf("Мінімальна кількість кроків: %d\n", result);

    return 0;
}
